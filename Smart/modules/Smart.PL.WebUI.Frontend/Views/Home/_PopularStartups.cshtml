<div data-ng-controller="PopularStartupsController as controller">
    <div class="flip-container" data-ng-repeat="startup in controller.startups">
        <div class="flipper">
            <div class="front">
                <div class="startup_cell">
                    <div class="startup_cell">
                        <img class="startup_img" ng-src="{{startup.LogoUrl}}" alt="Education">
                        <div class="startup_title">
                            {{startup.Title}}
                        </div>
                        <img class="face_startuper" ng-src="{{startup.Startuper.PhotoUrl}}">
                        <div class="line_cell">
                            <div class="startuper_name">{{startup.Startuper.Name}}</div>
                            <img class="flag_startup" ng-src="~/Styles/images/{{startup.Startuper.Counry | lowercase}}.jpg">
                            <span class="startuper_likes">{{startup.Startuper.Likes}}</span>
                            <img class="img_like" src="~/Styles/images/likes.png">
                            <div class="row"></div>
                        </div>
                        <div class="row"></div>
                        <div class="line_cell">
                            <div class="startuper_text">Round</div>
                            <div class="round_name">{{startup.Status}}</div>
                            <div class="start_team">Join Team!</div>
                            <div class="row"></div>
                        </div>
                        <div class="row"></div>
                        <div class="startuper_text">Categories</div>
                        <div data-ng-repeat="item in startup.Categories">
                            <div class="categories_name">{{item}}</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="back">
                <div class="back_title">{{startup.BackTitle}}</div>
                <a href="#" class="back_content">
                    {{startup.BackContent}}
                    <span class="green_text"> Click cell for more info >></span>
                    <div class="row"></div>
                </a>

                <a href="#" class="back_button">
                    <div class="back_icon icon_Follow"></div>
                    Follow
                </a>
                <a href="#" class="back_button">
                    <div class="back_icon icon_Massege"></div>
                    Send Message
                </a>
                <a href="#" class="back_button">
                    <div class="back_icon icon_Share"></div>
                    Share
                </a>
                <a href="#" class="back_button">
                    <div class="back_icon icon_Like"></div>
                    Like
                </a>
            </div>
        </div>
    </div>
</div>
